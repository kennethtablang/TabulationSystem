@model TabulationSystem.Models.Criteria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Criteria";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create New Criteria</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Criteria</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Create New Criteria</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Create New Criteria <small>Fill out the required information below.</small></h5>
                </div>
                <div class="ibox-content">
                    <form method="post" asp-action="CreateCriteria">

                        <!-- Criteria Name -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Criteria Name</label>
                            <div class="col-sm-10">
                                <input asp-for="CriteriaName" class="form-control" />
                                <span asp-validation-for="CriteriaName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <!-- Percentage -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Percentage</label>
                            <div class="col-sm-10">
                                <input asp-for="CriteriaPercentage" class="form-control" type="number" step="0.01" min="0" max="100" />
                                <span asp-validation-for="CriteriaPercentage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <!-- Description -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <!-- Event Category -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Select Event Category</label>
                            <div class="col-sm-10">
                                <select asp-for="EventCategoryId" class="form-control" asp-items="@ViewBag.EventCategories">
                                    <option value="">-- Select Event Category --</option>
                                </select>
                                <span asp-validation-for="EventCategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <!-- Submit and Cancel Buttons -->
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a asp-action="Index" class="btn btn-white btn-sm">Cancel</a>
                                <button type="submit" class="btn btn-primary btn-sm">Save Criteria</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/iCheck/custom.css" />
    <link rel="stylesheet" href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" />
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/iCheck/icheck.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}
