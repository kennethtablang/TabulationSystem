@model TabulationSystem.Models.ViewModels.JudgeDashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
    ViewData["Title"] = "JudgeDashboard";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Miss Hundred Islands 2025</h2>
        <h4>Alaminos City, Pangasinan</h4>
        <h5>Event ID: @Model.Events.FirstOrDefault()?.EventId</h5>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @if (Model != null && Model.Candidates.Any())
        {
            @foreach (var candidate in Model.Candidates)
            {
                <div class="col-md-2">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="product-imitation" style="padding: 0; background: none;">
                                <img src="@(string.IsNullOrEmpty(candidate.PhotoPath) ? "/images/placeholder.jpg" : candidate.PhotoPath)"
                                     alt="Candidate"
                                     class="img-responsive"
                                     style="width: 100%; height: auto;">
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    #@candidate.CandidateNumber
                                </span>
                                <a class="h5 font-bold m-t block">@candidate.FirstName</a>
                                <div class="small m-t-xs" style="padding: 5px">
                                    @candidate.Description
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <div class="alert alert-info">
                    <strong>Info!</strong> No candidates found.
                </div>
            </div>
        }
    </div>
</div>

