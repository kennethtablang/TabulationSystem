@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-3">
            <!-- Sidebar -->
            <div class="card shadow-sm p-3">
                <h5 class="text-center">User Menu</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="#">Profile</a></li>
                    <li class="list-group-item"><a href="#">Settings</a></li>
                    <li class="list-group-item"><a href="#">Logout</a></li>
                </ul>
            </div>
        </div>

        <div class="col-lg-9">
            <!-- Main Content -->
            <div class="card shadow-sm p-4">
                <h2 class="mb-3">Welcome, User!</h2>
                <p class="text-muted">Here is your dashboard overview.</p>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-center border-0 shadow-sm p-3">
                            <h5>Total Users</h5>
                            <p class="display-6 fw-bold text-primary">1,245</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center border-0 shadow-sm p-3">
                            <h5>Active Sessions</h5>
                            <p class="display-6 fw-bold text-success">320</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center border-0 shadow-sm p-3">
                            <h5>New Messages</h5>
                            <p class="display-6 fw-bold text-danger">15</p>
                        </div>
                    </div>
                </div>

                <hr />

                <h4>Recent Activity</h4>
                <ul class="list-group">
                    <li class="list-group-item">User John updated profile.</li>
                    <li class="list-group-item">New user Jane registered.</li>
                    <li class="list-group-item">System maintenance completed.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
