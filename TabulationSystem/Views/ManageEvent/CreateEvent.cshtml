@model TabulationSystem.Models.Event

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Event";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create New Event</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "Index")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Event</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Create New Event</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Create New Event <small>Fill out the required information below.</small></h5>
                </div>
                <div class="ibox-content">
                    <form method="post" asp-action="CreateEvent">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Event Name</label>
                            <div class="col-sm-10">
                                <input asp-for="EventName" class="form-control" />
                                <span asp-validation-for="EventName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Event Date</label>
                            <div class="col-sm-10">
                                <input asp-for="EventDate" type="date" class="form-control" />
                                <span asp-validation-for="EventDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Event Location</label>
                            <div class="col-sm-10">
                                <input asp-for="EventLocation" class="form-control" />
                                <span asp-validation-for="EventLocation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Event Banner</label>
                            <div class="col-sm-10">
                                <input asp-for="EventBanner" type="file" class="form-control" name="eventBannerFile" />
                                <span asp-validation-for="EventBanner" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Event Status</label>
                            <div class="col-sm-10">
                                <select asp-for="EventStatus" class="form-control">
                                    <option value="Upcoming">Upcoming</option>
                                    <option value="Ongoing">Ongoing</option>
                                    <option value="Ended">Ended</option>
                                </select>
                                <span asp-validation-for="EventStatus" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a asp-action="Index" class="btn btn-white btn-sm">Cancel</a>
                                <button type="submit" class="btn btn-primary btn-sm">Save Event</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/iCheck/custom.css" />
    <link rel="stylesheet" href="~/lib/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" />
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/iCheck/icheck.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}
